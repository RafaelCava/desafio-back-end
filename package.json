{
  "name": "jurishand",
  "version": "1.0.0",
  "description": "desafio back-end",
  "main": "dist/main/server.js",
  "author": "Rafael Cavalcante",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "typescript": "*"
  },
  "scripts": {
    "test": "NODE_ENV=test jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "NODE_ENV=test jest --passWithNoTests --runInBand",
    "test:unit": "yarn test:verbose --watch -c jest-unit.config.ts",
    "test:integration": "yarn test:verbose --watch -c jest-integration.config.js",
    "test:cov": "rimraf coverage && yarn test --coverage",
    "build:compile": "tsc -p tsconfig-build.json",
    "build": "rimraf dist && yarn build:compile",
    "test:staged": "yarn test --findRelatedTests $(git status --short)"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.19.1",
    "node": ">= 16.x"
  }
}
